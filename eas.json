{
	"cli": {
		"version": ">= 15.0.15",
		"appVersionSource": "remote"
	},
	"build": {
		"development": {
			"developmentClient": true,
			"distribution": "internal",
			"android": {
				"buildType": "apk"
			},
			"ios": {
				"simulator": true
			}
		},
		"preview": {
			"distribution": "internal",
			"android": {
				"buildType": "apk"
			},
			"ios": {
				"simulator": false
			}
		},
		"production": {
			"autoIncrement": true,
			"android": {
				"buildType": "app-bundle"
			},
			"ios": {
				"simulator": false
			}
		},
		"production-apk": {
			"autoIncrement": true,
			"android": {
				"buildType": "apk"
			}
		}
	},
	"submit": {
		"production": {}
	}
}
